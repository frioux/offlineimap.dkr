#!/bin/dash

export HOME=/home/user

perl -MTemplate -E'Template->new(ABSOLUTE=>1)->process(q(/home/user/offlineimaprc.tt), \%ENV) or die Template->error' > $HOME/.offlineimaprc
perl -MTemplate -E'Template->new(ABSOLUTE=>1)->process(q(/home/user/monitrc.tt), \%ENV) or die Template->error' > $HOME/.monitrc
chown user /opt/log /opt/var $HOME/.offlineimaprc $HOME/.monitrc -R
chmod 600 $HOME/.monitrc
